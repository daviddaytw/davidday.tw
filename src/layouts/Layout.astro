---
import '../styles/global.css';

export interface Props {
	title?: string;
	description?: string;
}

const { title = "戴惟 | David Day - 從台灣學生到矽谷創業者", description = "戴惟的創業旅程記錄，從台灣學生到舊金山創業者，專注於 AI 垂直領域應用，尋找技術真正能幫助人們生活的解決方案。探索我的專案、投資和開源貢獻。" } = Astro.props;
---

<!doctype html>
<html lang="zh-Hant">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="color-scheme" content="light dark" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
		<meta name="author" content="daviddaytw" />
		<meta name="description" content={description} />
		<meta name="keywords" content="戴惟, David Day, 創業, 台灣, 矽谷, 舊金山, AI, 人工智慧, 垂直應用, 創業家, 工程師, 投資, 開源, 專案" />

		<meta property="og:title" content={title} />
		<meta property="og:locale" content="zh-Hant" />
		<meta property="og:description" content={description} />
		<meta property="og:url" content="https://davidday.tw/" />
		<meta property="og:site_name" content="davidday.tw" />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary" />
		<meta property="twitter:title" content={title} />
	</head>
	<body>
		<slot />
		<script data-collect-dnt="true" async src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
	</body>
</html>
